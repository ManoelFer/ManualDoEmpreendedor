<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundotelacadastro"
    tools:context="com.example.manoel.manualdoempreendedor.Activity.Tela_de_cadastro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo_manual_do_empeendedor"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/cad_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="35dp"
        android:background="@color/cardview_shadow_start_color"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="DIGITE AQUI SEU E-MAIL!"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/cardview_light_background"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="167dp" />

    <EditText
        android:longClickable="false"
        android:id="@+id/confirma_cad_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cad_email"
        android:layout_alignStart="@+id/cad_email"
        android:layout_below="@+id/cad_email"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="CONFIRMAR E-MAIL"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/cardview_light_background"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="167dp" />


    <EditText
        android:id="@+id/cad_senha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirma_cad_email"
        android:layout_alignStart="@+id/confirma_cad_email"
        android:layout_below="@+id/confirma_cad_email"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="DIGITE AQUI SUA SENHA!"
        android:inputType="textPassword"
        android:textColorHint="@color/cardview_light_background"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="233dp" />

    <EditText
        android:id="@+id/confirma_cad_senha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cad_senha"
        android:layout_alignStart="@+id/cad_senha"
        android:layout_below="@+id/cad_senha"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="CONFIRMAR SENHA"
        android:inputType="textPassword"
        android:textColorHint="@color/cardview_light_background"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="292dp" />

    <EditText
        android:id="@+id/cad_nome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirma_cad_senha"
        android:layout_alignStart="@+id/confirma_cad_senha"
        android:layout_below="@+id/confirma_cad_senha"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:drawableLeft="@drawable/ic_nome_user"
        android:ems="10"
        android:hint="NOME COMPLETO DO USUÃRIO"
        android:inputType="text"
        android:textColorHint="@color/cardview_light_background"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="360dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        app:cardBackgroundColor="@color/common_google_signin_btn_text_light_focused"
        app:cardCornerRadius="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="456dp">

        <RelativeLayout
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="serif"
                android:text="REGISTRAR!"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
